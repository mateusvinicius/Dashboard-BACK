{
   "name": "default",
    "type": "sqlite",
    "database": "./base/db.sqlite3",
    "autoSchemaSync": true,
     "synchronize": true,
   "entities": [
      "src/Models/**/*.{ts,js}"
   ],
   "migrations": [
      "src/migration/**/*.{ts,js}"
   ],
   "subscribers": [
      "src/subscriber/**/*.{ts,js}"
   ],
   "logging": {
      "logQueries": true
    },
   "cli": {
      "entitiesDir": "src/Models",
      "migrationsDir": "src/migration",
      "subscribersDir": "src/subscriber"
   }
}